{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2016",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",
    "resolveJsonModule": true
  },
  "include": ["src"]
}
